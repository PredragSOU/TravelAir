@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>

    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />

</head>

<body>

    <div class = "main">

        <div class="form-decor">

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div class = "form-header">
                    <img src = "/images/decor/TA_Logo.jpg" />
                    <h2>Create a TravelAir Account</h2>
                </div> 

                <hr class = "form-element"/>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating form-element">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating form-element">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating form-element">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class = "form-btn-part">
                    <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary register-btn">Sign In</button>
                    <a href = "">
                        <button id="registerSubmit" type="button" class="btn btn-lg btn-primary register-back-btn">Back</button>
                    </a>
                   
                </div>
                
            </form>

        </div>

    </div>

    <footer>

        <div class = "footer-block">
            <p>TravelAir Inc.</p>
            <img src = "/images/decor/TA_Logo.jpg"/>
        </div>

    </footer>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
