@model TravelAir.ViewModels.VM_FlightOffer_Create


<head>

<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
<!-- select2-bootstrap4-theme -->
<link href="https://raw.githack.com/ttskch/select2-bootstrap4-theme/master/dist/select2-bootstrap4.css" rel="stylesheet">



</head>




<body>
<div class = "main">
    <h4>FlightOffer</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OriginCountry" class="control-label"></label>
                    <select asp-for="OriginCountry" id = "origin-country" class ="form-control simpleSelect2" clientidmode="Static"></select>
                </div>
                <div class="form-group">
                    <label asp-for="OriginCity" class="control-label"></label>
                    <select asp-for="OriginCity" class ="form-control simpleSelect2 selectpicker"  asp-items = "ViewBag.OriginCities"></select>
                </div>
                 <div class="form-group">
                    <label asp-for="AirportId" class="control-label"></label>
                    <select asp-for="AirportId" class ="form-control simpleSelect2" asp-items = "ViewBag.Airports"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DestinationCountry" class="control-label"></label>
                    <select asp-for="DestinationCountry" class ="form-control simpleSelect2" asp-items = "ViewBag.DestinationCountries"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DestinationCity" class="control-label"></label>
                    <select asp-for="DestinationCity" class ="form-control simpleSelect2" asp-items = "ViewBag.DestinationCities"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DestinationAirport" class="control-label"></label>
                    <select asp-for="DestinationAirport" class ="form-control simpleSelect2" asp-items = "ViewBag.DestinationAirports"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DepartureDate" class="control-label"></label>
                    <input asp-for="DepartureDate" class="form-control" />
                    <span asp-validation-for="DepartureDate" class="text-danger"></span>
                </div>
               <div class="form-group">
                    <label asp-for="ReturnDate" class="control-label"></label>
                    <input asp-for="ReturnDate" class="form-control" />
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Length" class="control-label"></label>
                    <input asp-for="Length" class="form-control" />
                    <span asp-validation-for="Length" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="URL" class="control-label"></label>
                    <input asp-for="URL" class="form-control" />
                    <span asp-validation-for="URL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CabinClassId" class="control-label"></label>
                    <select asp-for="CabinClassId" class ="form-control" asp-items="ViewBag.CabinClasses"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class ="form-control" asp-items="ViewBag.Companies"></select>
                </div>
               
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>
</body>

@section Scripts
{
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/js/select2.js"></script>

    <script>
        $(".simpleSelect2").select2({
        placeholder: "Select a Static Value",
        theme: "bootstrap4",
        allowClear: true });
    </script>


}



